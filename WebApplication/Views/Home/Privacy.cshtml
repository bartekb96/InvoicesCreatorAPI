@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <br />

            <form method="post" asp-controller="users" asp-action="login" class="form-horizontal">
                <div class="form-group">
                    <label for="username">Nazwa użytkownika</label>
                    <input class="form-control" placeholder="Nazwa użytkownika" type="text" id="username" />
                </div>
                <div class="form-group">
                    <label for="password">Hasło</label>
                    <input class="form-control" placeholder="Hasło" type="password" id="password" />
                </div>
                <button type="submit" class="btn-danger">Zaloguj</button>
            </form>
        </div>
    </div>
</div>
