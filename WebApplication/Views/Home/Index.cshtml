@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <br />

            <form method="post" asp-controller="home" asp-action="LogIn" class="form-horizontal">
                <div class="form-group">
                    <label for="username">Nazwa użytkownika</label>
                    <input class="form-control" placeholder="Nazwa użytkownika" type="text" id="UserName" name="UserName"/>
                </div>
                <div class="form-group">
                    <label for="password">Hasło</label>
                    <input class="form-control" placeholder="Hasło" type="password" id="Password"  name="Password"/>
                </div>
                <button type="submit" class="btn-danger">Zaloguj</button>
            </form>
        </div>
    </div>
</div>

